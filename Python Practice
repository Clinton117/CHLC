character_name = "Tom"
character_age = "48 "
print("There once was a man named " + character_name + ",")
print("He was " + character_age + " years old.")
print("He really liked the name " + character_name + ",")
print("But didn't like being " + character_age + ".")

phrase = "Clinton Cheung"
print(phrase.upper().islower()) <Change to Upper and check if it is Upper
print(len(phrase)) <- Count the length of the strings
print(phrase[8])  -< Return the character from a specific postition, starting from 0
print(phrase.index("Ch")) -< Return the starting position of the strings/character inside the parentheses
